#include <iostream>
#include <string>
using namespace std;

void bubble_sort (string &word){
    int n =word.length();
    for(int i =0;i<n-1;i++){
        bool swapped = false;
        for(int j = 0;j<n-i-1;j++){
            if(word[j]>word[j+1]){
                swap(word[j],word[j+1]);
                swapped=true;
            }
        }
        if (swapped==false)
            break;
    }
}






int main() {
    string word1, word2;
    cout<<"enter word 1: ";
    cin>> word1;
    cout<<"enter word 2: ";
    cin>> word2;
    
    
    bubble_sort(word1);
    bubble_sort(word2);
    
    
    if(word1==word2){
        cout << "words are anagroms"<<endl;
    }else{
        cout<<"words are not anagrams"<<endl;
    }
    
    

    return 0;
}
